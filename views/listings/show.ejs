<%- layout("/layouts/boilerplate") %>
<body>
    <div class="container show">
         <div class="Card mb-3">
            <h5 class="card-title mb-1"><b><%=data.title%></b></h5>
            <img src="<%=data.image.url%>" class="card-img-top mb-3" alt="...">
            <div class="card-body">
                <p>Owned by @<%= data.owner.username%></p>
                <p class="card-text"><%=data.description%>
                <br>
                <%= "â‚¹" + data.price.toLocaleString("en-IN") + "/night" %>
                <br>
                <%=data.location%>
                <br>
                <%=data.country%>
            </div>
             <!-- only show edit and delete button if the current user is the owner of the listing -->
            <% if(currentUser && data.owner._id.equals(currentUser._id)){ %> 
             <div class="bts mt-3">
                <form method="get" action="/edit/<%=data._id %>">
                <button class="btn btn-primary"> Edit </button>
                </form>
                <form method="POST" action="/delete/<%=data._id %>?_method=DELETE">
                    <button class="btn btn-danger"> Delete </button>
                </form>
            </div>
              <% } %> 
        </div>
       
            <hr>

         <!-- Adding the Review form here  -->
             <div class="container col-6">
                <h2 class="mb-4 fst-normal">Leave a Review</h2>
                <form action="/listing/<%=data._id%>/review" method="POST" novalidate class="needs-validation">
                    <div class="mb-3">
                        <fieldset class="starability-slot">
                            <legend> Rating:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="rating" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                     <div class="mb-3">
                        <lable for="comment">Comment</lable>
                        <textarea name="comment" id="comment" class="form-control" rows="6" required></textarea>
                        <div class="invalid-feedback">
                            please add a comment
                        </div>
                    </div>
                    
                    <button class="btn btn-outline-dark">submit</button>
                </form>
             </div>

             <hr>

              <!-- this is for showing the reviews.. -->

             <div class="container col-8 my-4">
                    <h3 class="mb-3">All Reviews</h3>
                    <div class="row g-3">
                        <% for(review of data.Reviews){ %>
                        <div class="col-md-6"> <!-- 2 columns on medium+ screens -->
                            <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">@<%=review.author.username%></h5>
                                <!-- added this line from the starability repo to show static rating -->
                                <p class="starability-result" data-rating=<%= review.rating %>></p>
                                <p class="card-text"><%= review.comment %></p>
                            </div>
                            <form action="/listing/<%=data._id%>/review/<%=review._id%>?_method=DELETE" method="POST" class="m-2">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                            </div>
                            
                        </div>
                        <% } %>
                    </div>
                    </div>



    </div>
</body>
