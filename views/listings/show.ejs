<%- layout("/layouts/boilerplate") %>

<body>
  <div class="container py-5">
    <!-- Main Listing Card -->
    <div class="Card mx-auto shadow-lg p-4 mb-4 rounded-3" style="max-width: 700px; background-color: #fff;">
      <h3 class="fw-bold mb-3 text-center"><%= data.title %></h3>
      <img src="<%= data.image.url %>" class="img-fluid rounded mb-4" alt="<%= data.image.filename %>" style="height: 350px; object-fit: cover; width: 100%;">
      
      <div class="card-body">
        <p class="mb-2 text-muted">Owned by <strong>@<%= data.owner.username %></strong></p>
        <p class="mb-3"><%= data.description %></p>

        <div class="d-flex flex-wrap justify-content-between align-items-center">
          <p class="fw-bold fs-5 text-success mb-0">
            ₹<%= data.price.toLocaleString("en-IN") %> / night
          </p>
          <div class="text-secondary text-end">
            <p class="mb-0"><%= data.location %></p>
            <p class="mb-0"><%= data.country %></p>
          </div>
        </div>
      </div>

         <!-- Adding the Review form here  -->
             <div class="container col-6">
                <h2 class="mb-4 fst-normal">Leave a Review</h2>
                <form action="/listing/<%=data._id%>/review" method="POST" novalidate class="needs-validation">
                    <div class="mb-3">
                        <fieldset class="starability-slot">
                            <legend> Rating:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="rating" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                     <div class="mb-3">
                        <lable for="comment">Comment</lable>
                        <textarea name="comment" id="comment" class="form-control" rows="6" required></textarea>
                        <div class="invalid-feedback">
                            please add a comment
                        </div>
                    </div>
                    
                    <button class="btn btn-outline-dark">submit</button>
                </form>
             </div>

    <hr class="my-5">

              <!-- this is for showing the reviews.. -->

             <div class="container col-8 my-4">
                    <h3 class="mb-3">All Reviews</h3>
                    <div class="row g-3">
                        <% for(review of data.Reviews){ %>
                        <div class="col-md-6"> <!-- 2 columns on medium+ screens -->
                            <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">@<%=review.author.username%></h5>
                                <!-- added this line from the starability repo to show static rating -->
                                <p class="starability-result" data-rating=<%= review.rating %>></p>
                                <p class="card-text"><%= review.comment %></p>
                            </div>
                            <form action="/listing/<%=data._id%>/review/<%=review._id%>?_method=DELETE" method="POST" class="m-2">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                            </div>
                            
                        </div>
                        <% } %>
                    </div>
                    </div>

        <div class="text-center">
          <button class="btn btn-dark px-5 py-2">Submit</button>
        </div>
      </form>
    </div>

    <hr class="my-5">

    <!-- Reviews Section -->
    <div class="col-lg-8 mx-auto">
      <h3 class="mb-4 fw-semibold text-center">All Reviews</h3>
      <div class="row g-4">
        <% for(review of data.Reviews){ %>
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100 rounded-3">
            <div class="card-body">
              <h6 class="card-title fw-bold">@<%= review.author.username %></h6>
              <p class="card-text text-muted"><%= review.comment %></p>
              <p class="card-text text-warning fw-bold mb-0">
                <%= review.rating %> ⭐
              </p>
            </div>
            <form action="/listing/<%=data._id%>/review/<%=review._id%>?_method=DELETE" method="POST" class="m-2">
              <button class="btn btn-outline-dark w-100">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>